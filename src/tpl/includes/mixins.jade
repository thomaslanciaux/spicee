mixin box(type, title, author, contentinfo, score)
  a.box(class=type.replace(' ', '-'), href='#', 
        style='background-image:url(http://img.ffffound.com/static-data/assets/6/ca82c87a9cdd8bd525930a43ed1d42f78c621a22_m.jpg)')
    span.type= type
    .in
      header.heading
        h1.title= title
        span.author= 'by ' + author
      .content
        p
          | Latinadicunt contemnere. in quibus hoc primum est in quo 
          | admirer, cur in idque libenter crebis gravissimis rebusâ€¦
        p.contentinfo
          | 93 min - Societe - Culture - 12 437 vues
    .score
      - var scoreitems = [];
      - for (var i = 0; i < score; i++) { scoreitems.push(i); }
      each item in scoreitems
        i.icon-spice

mixin boxsmall(type, title, score)
  a.box.box-small(class=type.replace(' ', '-'), href='#',
        style='background-image:url(http://img.ffffound.com/static-data/assets/6/ca82c87a9cdd8bd525930a43ed1d42f78c621a22_m.jpg)')
    .in
      span.type= type
      header.heading
        h1.title= title
      .score
        - var scoreitems = [];
        - for (var i = 0; i < score; i++) { scoreitems.push(i); }
        each item in scoreitems
          i.icon-spice

mixin pagination(count, className)
  .pagination(class=className)
    a.icon-chevron-left.disabled
    a.icon-chevron-right(href='#')
    span.pages
      - var pages = [];
      - for (var i = 0; i < count; i++) { pages.push(i); }
      each page in pages
        if (page === 0)
          span.active= page+1
        else
          a(href='#')= page+1
