.slider

  .background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-repeat no-repeat
    background-position center center
    background-size cover
    z-index 0
    opacity .5

  .viewport
    position relative
    z-index 1
    padding-bottom 50px

  .button
    position absolute
    z-index 2
    top 50%
    margin-top -70px
    width 60px
    text-align center
    color _white
    background rgba(black, .4)
    cursor pointer
    i
      font-size 40px
      line-height 140px

  .button-previous
    left 0
    border-radius 0 10px 10px 0

  .button-next
    right 0
    border-radius 10px 0 0 10px

  .swiper-button-disabled
    color _grey
    cursor default

  .swiper-pagination
    height 28px
    line-height 28px

  .swiper-pagination-bullet
    vertical-align middle
    background none
    border 2px solid _lightgrey
    opacity 1

  .swiper-pagination-bullet-active
    width 10px
    height 10px
    background _white
    border-color _white


@media media-mobile

  .slider .button
    display none
