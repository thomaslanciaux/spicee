.type
  position absolute
  top 0
  left 0
  padding 0 5px 0 10px
  height 20px
  font-size 14px
  font-style italic
  font-weight 600
  text-transform uppercase
  background-color _pink
  color _body
  &:after
    position absolute
    right -10px
    top 0
    width 0
    height 0
    content ''
    border 10px solid _pink
    border-bottom-color transparent
    border-right-color transparent
    border-right-width 5px
    border-left-width 5px

.box
  position relative
  overflow hidden
  display block
  min-height 360px
  background _darkgrey
  text-align center
  font-size 14px
  background-repeat no-repeat
  background-position center center
  background-size cover
  transform translate3d(0, 0, 0)

  .in
    position absolute
    right 0
    bottom -110px
    left 0
    overflow hidden
    padding _gutter _gutter 0
    height 250px
    background rgba(black, .55)
    transition bottom .3s ease

  .content
    opacity 0
    transition opacity .3s ease

  .heading
    .title
      margin 0 0 10px
      font-size 20px
      line-height 1
    &:before
      margin-left -40px
      width 80px
      transition all .3s ease
      background _pink

  .contentinfo
    position absolute
    bottom 0
    left 0
    right 0
    padding 5px 10px
    margin 0
    font-style italic
    line-height 1.2
    color _pink

  .icon-play
    font-size 28px
    color _pink

  .score
    position absolute
    bottom 0
    right 0
    padding 5px 10px
    font-size 20px
    transition all .3s ease
    color _pink
    i
      margin-right 5px

  &:hover
    .in
      bottom 0
    .heading:before
      margin-left -20px
      width 40px
    .content
      opacity 1
    .score
      bottom -30px
      opacity 0

.story 
  .heading:before
    background _pink
  .type
    background-color _pink
    &:after
      border-top-color _pink
      border-left-color _pink
  .icon-play
  .contentinfo
  .score
    color _pink

.lifestyle 
  .heading:before
    background _green
  .type
    background-color _green
    &:after
      border-top-color _green
      border-left-color _green
  .icon-play
  .contentinfo
  .score
    color _green

.investigation 
  .heading:before
    background _yellow
  .type
    background-color _yellow
    &:after
      border-top-color _yellow
      border-left-color _yellow
  .icon-play
  .contentinfo
  .score
    color _yellow

.box-small
  min-height 0
  .in
    position static
    bottom auto
    display flex
    flex-direction column
    justify-content center
    padding 0
    height 180px
    width 100%
  .heading
    margin 0
    padding 0 10px
    &:before
      display none
  &:hover
    .score
      bottom 0
      opacity 1


@media only screen and (min-width:768px) and (max-width: 890px)

  .span-4
    .box
      .content
        p:first-child
          display none
      .icon-play
        display inline-block
        margin-top _gutter
        font-size 36px
