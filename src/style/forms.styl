fieldset
  padding 0
  border 0

label[for]
  cursor pointer

input[type=text]
input[type=password]
input[type=date]
input[type=number]
textarea
  box-sizing border-box
  padding 10px
  max-width 100%
  height 42px
  font-family 'DinPro'
  font-style italic
  font-size 18px
  color grey
  background black
  border 1px solid _darkgrey
  line-height 1
  transition border, color .3s ease-in-out
  overflow hidden
  &:focus
    color _white
    outline 0

textarea
  height 42px
  min-height 42px
  max-height 5rem
  line-height 21px

::-webkit-input-placeholder
  color _grey

::-moz-placeholder
  color _grey

::-ms-input-placeholder
  color _grey

.js
  textarea
    resize none


@media media-mobile

  textarea
    height 252px
