#footer
  padding 20px 0
  font-weight 400
  font-style italic
  font-size 14px
  color _grey

  .logo
    font-size 0

  nav
    float left
    ul
      display inline-block
      list-style none
      margin 0
      padding 0
    li
      float left
    a
      display block
      padding 0 15px
      text-decoration none
      text-transform uppercase
      line-height 40px
      color _grey
      transition color .3s ease-in-out
      &:hover
      &:focus
        color _white

  a
  .copyright
    line-height 40px

  .copyright
    float right
