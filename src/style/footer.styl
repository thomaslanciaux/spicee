#footer
  padding 20px 0
  font-weight 400
  font-style italic
  font-size 14px

  .logo
    float left
    height auto
    font-size 40px

  nav
    float left
    ul
      display inline-block
      list-style none
      margin 0
      padding 0
    li
      float left
    a
      display block
      padding 0 15px
      text-decoration none
      text-transform uppercase
      line-height 40px
      color _grey
      transition color .2s ease-in-out
      &:hover
      &:focus
        color _white

  a
  .copyright
    line-height 40px

  .copyright
    float right


@media media-mobile

  #footer
    text-align center

    .logo
    nav
    .copyright
      float none
      margin 0 auto

    .logo
      display none

    nav li
      display inline-block
      float none
      white-space nowrap
