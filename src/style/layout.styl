_gutter = 25px

body
  overflow-x hidden

#content
  border-top 1px solid #212121
  border-bottom 1px solid #212121

.viewport
  box-sizing border-box
  display block
  margin 0 auto
  padding 0 _gutter
  max-width 980px
  overflow hidden

.no-sp
  margin 0
  padding 0

.t-space
  margin-top _gutter

.r-space
  margin-right _gutter

.b-space
  margin-bottom _gutter

.l-space
  margin-left _gutter

.i-space
  padding-top 50px

.t-pad
  padding-top _gutter

.r-pad
  padding-left _gutter

.b-pad
  padding-bottom _gutter

.b-pad-2
  padding-bottom 50px

.l-pad
  padding-left _gutter

.t-border
  border-top 1px solid _darkgrey

.l-border
  border-left 1px solid _darkgrey

.r-border
  border-right 1px solid _darkgrey

.wide
  display block
  width 100%

.js .no-js
  display none

.widescreen
  position relative
  padding 25px 0 56.25%
  height 0
  .in
    position absolute
    top 0
    left 0
    width 100%
    height 100%


@media media-touch

  .widescreen
    margin 0 -25px


@media media-not-mobile

  .mobile
    display none
