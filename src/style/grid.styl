.row
  font-size 0
  margin-left -25px

[class^='span-']
[class*=' span']
  box-sizing border-box
  display inline-block
  vertical-align top
  font-size 1rem
  padding-left _gutter
  margin-bottom 50px

.span-3
  width 25%

.span-4
  width 33.333333333%

.span-6
  width 50%

.span-8
  width 66.666666666%


@media only screen and (max-width: 768px)

  .span-3
    width 50%

  .span-4
  .span-8
    width 100%
