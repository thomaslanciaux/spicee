#header
  font-size 0
  .logo
  nav
    display inline-block
    vertical-align middle
    font-size 16px

  .logo
    margin 0
    width 155px
    height auto
    padding-right 60px
    font-size 0
    line-height 1
    fill _pink
    transition fill .3s ease
    cursor pointer
    &:hover
    &:focus
      fill _white

  nav
    text-transform uppercase
    ul
      overflow hidden
      padding 0
      margin 0
      list-style none

    li
      position relative
      float left
      margin 0

    a
      display block
      padding 0 15px
      line-height 90px
      font-style italic
      font-weight 600
      text-decoration none
      color _white
      border-bottom 5px transparent solid
      transition border .3s ease-in-out
      &:hover
      &:focus
        border-color _white

    .my-spicee:before
        overflow hidden
        position absolute
        top 50%
        left 0
        margin-top -16px
        width 0
        height 25px
        border-left 1px dotted #424242
        content ''

    .story
      &:hover, &:focus
        border-color _pink

    .investigation
      &:hover, &:focus
        border-color _yellow

    .lifestyle
      &:hover, &:focus
        border-color _green

  .search
    a
      color #666
      padding 0
      border 0
      margin 0


@media media-mobile

  #header
    overflow hidden
    box-sizing border-box
    display table-cell
    vertical-align middle
    padding 10px 0
    width 100%
    height 50px

    .logo
      width 100px
      height auto

    nav
      display none
