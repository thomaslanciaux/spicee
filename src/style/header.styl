#header
  font-size 0
  .logo
  nav
    display inline-block
    vertical-align middle
    font-size 16px

  .logo
    margin 0
    padding-right 60px
    font-size 40px
    line-height 1
    color _pink

  nav
    text-transform uppercase
    ul
      overflow hidden
      padding 0
      margin 0
      list-style none

    li
      position relative
      float left
      margin 0

    a
      display block
      padding 0 15px
      line-height 90px
      font-style italic
      font-weight 600
      text-decoration none
      color _white
      border-bottom 5px transparent solid
      transition border .3s ease-in-out
      &:hover
      &:focus
        border-color _white

    .my-spicee:before
        overflow hidden
        position absolute
        top 50%
        left 0
        margin-top -12.5px
        width 0
        height 25px
        border-left 1px dotted #424242
        content ''

    .story
      &:hover, &:focus
        border-color _pink

    .investigation
      &:hover, &:focus
        border-color _yellow

    .lifestyle
      &:hover, &:focus
        border-color _green
